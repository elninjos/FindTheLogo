<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UI.Title">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily="@font/orange_juice"
        android:text="@string/findthelogo"
        android:textSize="190sp"
        android:layout_marginTop="45dp"
        android:textColor="#00A2E8"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="500dp"
        android:height="166dp"
        android:fontFamily="@font/comic_sans"
        android:background="@drawable/mybutton"
        android:layout_centerInParent="true"
        android:textSize="70sp"
        android:textColor="#ffffff"
        android:text="@string/play_now"
        android:onClick="onClickPlay" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="onClickInstructions" />

</RelativeLayout>
